<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- Single ListItem -->
    <TextView android:id="@+id/ubstation_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#008A00"
        android:visibility="gone"/>"
     
    <!-- UBike Station Name -->
    <TextView android:id="@+id/ubstation_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <!-- UBike Station number of bikes can be borrowed/returned -->
    <TextView android:id="@+id/ubstation_numofbikes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>
